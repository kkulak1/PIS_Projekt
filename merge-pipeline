pipeline {
    agent any

    tools {
        jdk 'jdk-17'
        maven "M3"
        git "Default"
    }

    triggers {
        githubPullRequests(
            autoCloseFailedPr: true,
            approveIfSuccess: true,
            orgWhitelist: '',
            orgBlacklist: '',
            triggerPhrase: '',
            onlyTriggerPhrase: '',
            skipBuildPhrase: '',
            branches: 'main',
            allowMembersOfWhitelistedOrgsAsAdmin: false,
            extensions: [
                [
                    $class: 'CommentAdded',
                    commentBody: 'retest this please',
                    context: '',
                    triggeredStatus: 'STARTED'
                ],
                [
                    $class: 'PretestedIntegration'
                ],
                [
                    $class: 'MergePullRequest'
                ]
            ]
        )
    }

    stages {
        stage('Deploying') {
            steps {
                sh "mvn deploy"
            }
        }
    }

    post {
        success {
            githubNotify(
                status: 'SUCCESS',
                account: "kkulak1",
                credentialsId: "github",
                context: 'merge pipeline',
                description: 'Build succeeded',
                repo: "PIS_projekt",
                sha: env.GIT_COMMIT
            )
        }
        failure {
            githubNotify(
                status: 'FAILURE',
                account: "kkulak1",
                credentialsId: "github",
                context: 'merge pipeline',
                description: 'Build failed',
                repo: "PIS_projekt",
                sha: env.GIT_COMMIT
            )
        }
    }
}

