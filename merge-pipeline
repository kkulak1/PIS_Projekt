pipeline {
    agent any
    tools {
        jdk 'jdk-17'
        maven "M3"
        git "Default"
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Deployment') {
            steps {
                sh 'mvn deploy'
            }
        }
    }
    post {
        always {
            githubNotify(
                status: currentBuild.result == 'SUCCESS' ? 'SUCCESS' : 'FAILURE',
                message: "Build finished with status ${currentBuild.result}",
                context: 'continuous-integration/jenkins'
            )
        }
    }
    options {
        githubPullRequest(
            autoCloseFailedPr: true,
            approveIfSuccess: true,
            branches: '*/main',
            extensions: [
                $class: 'BuildStatusSettings',
                usingCrumb: true
            ]
        )
    }
}
